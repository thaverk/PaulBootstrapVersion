    <!-- Script to update checkbox preview -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Function to update the checkbox preview
            function updateCheckboxPreview() {
                const selectedCategories = document.querySelectorAll('h2 input[type="checkbox"]:checked');
                const previewList = document.getElementById('selected-categories');
                previewList.innerHTML = ''; // Clear previous items

                selectedCategories.forEach(function (category) {
                    const categoryName = category.parentNode.textContent.trim();
                    const listItem = document.createElement('li');
                    listItem.textContent = categoryName;
                    previewList.appendChild(listItem);
                });
            }

            // Attach event listener to checkboxes
            const checkboxes = document.querySelectorAll('h2 input[type="checkbox"]');
            checkboxes.forEach(function (checkbox) {
                checkbox.addEventListener('change', updateCheckboxPreview);
            });

            // Initial update of checkbox preview
            updateCheckboxPreview();
        });
    </script>
